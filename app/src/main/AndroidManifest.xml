<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.raj.zoho">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.raj.zoho.AppApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.raj.zoho.activities.splash.Splash"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.raj.zoho.activities.home.CountryDetails"
            android:label="Country Details" />

        <activity
            android:name="com.raj.zoho.activities.weather.WeatherActivity"
            android:label="Weather Today">

        </activity>

        <activity
            android:name="com.raj.zoho.activities.home.HomeActivity"
            android:label="Countries"></activity>

<!--        <service android:name="com.raj.zoho.GPSTracker" />-->

        <activity
            android:name="com.raj.zoho.PermissionAboveMarshmellow"
            android:configChanges="locale"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>